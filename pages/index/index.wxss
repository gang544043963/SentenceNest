/* pages/index/index.wxss */

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.date-text {
  font-size: 32rpx;
  color: #4A90E2;
  font-weight: 500;
}

/* 用户信息显示 */
.user-info {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 20rpx;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
}

.user-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4A90E2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
}

/* 句子卡片 */
.sentence-card {
  padding: 40rpx;
  margin-bottom: 30rpx;
}

.sentence-content {
  text-align: center;
  margin-bottom: 40rpx;
}

.english-text {
  display: block;
  font-size: 36rpx;
  line-height: 1.5;
  color: #333333;
  font-weight: 500;
  margin-bottom: 20rpx;
  letter-spacing: 1rpx;
}

.chinese-text {
  display: block;
  font-size: 28rpx;
  line-height: 1.4;
  color: #666666;
  font-weight: 400;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-around;
  gap: 20rpx;
}

.play-btn, .collect-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border-radius: 12rpx;
  border: none;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.play-btn {
  background: #4A90E2;
  color: white;
}

.play-btn.playing {
  background: #357ABD;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(74, 144, 226, 0.7);
  }
  70% {
    transform: scale(1.02);
    box-shadow: 0 0 0 10rpx rgba(74, 144, 226, 0);
  }
  100% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(74, 144, 226, 0);
  }
}

.play-btn:active {
  background: #357ABD;
  transform: scale(0.98);
}

.collect-btn {
  background: #FFFFFF;
  color: #4A90E2;
  border: 2rpx solid #4A90E2;
  pointer-events: auto;
  position: relative;
  z-index: 1;
}

.collect-btn-simple {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border-radius: 12rpx;
  border: 2rpx solid #4A90E2;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.2s ease;
  background: #FFFFFF;
  color: #4A90E2;
  margin-left: 20rpx;
}

.collect-btn.collected {
  background: #FFE6E6;
  color: #E74C3C;
  border-color: #E74C3C;
}

.collect-btn-simple.collected {
  background: #FFE6E6;
  color: #E74C3C;
  border-color: #E74C3C;
}

.collect-btn:active, .collect-btn-simple:active {
  transform: scale(0.98);
}

.action-buttons .icon {
  margin-right: 8rpx;
  font-size: 32rpx;
}

.btn-text {
  font-size: 28rpx;
}

/* 重点词汇 */
.keywords-section {
  padding: 30rpx;
}

.section-title {
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.keywords-list {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.keyword-item {
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  border-left: 6rpx solid #4A90E2;
}

.word-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  gap: 15rpx;
}

.word {
  font-size: 32rpx;
  font-weight: 600;
  color: #4A90E2;
}

.phonetic {
  font-size: 26rpx;
  color: #F5A623;
  font-family: 'Courier New', monospace;
}

.part-of-speech {
  font-size: 24rpx;
  color: #999999;
  background: #E8E8E8;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

.meaning {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.4;
}

/* 底部提示 */
.footer-tip {
  text-align: center;
  margin-top: 40rpx;
  padding: 20rpx;
}

.tip-text {
  display: block;
  font-size: 26rpx;
  color: #999999;
  font-style: italic;
  margin-bottom: 10rpx;
}

.play-tip {
  display: block;
  font-size: 22rpx;
  color: #CCCCCC;
  font-style: italic;
}
