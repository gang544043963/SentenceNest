/* pages/collection/collection.wxss */

/* 搜索栏 */
.search-bar {
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}

.search-input-wrapper {
  position: relative;
  background: white;
  border-radius: 50rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  border: 2rpx solid #f0f0f0;
  transition: border-color 0.3s ease;
}

.search-input-wrapper:focus-within {
  border-color: #4A90E2;
  box-shadow: 0 2rpx 12rpx rgba(74, 144, 226, 0.2);
}

.search-input {
  width: 100%;
  height: 80rpx;
  padding: 0 120rpx 0 80rpx;
  font-size: 28rpx;
  background: transparent;
  border: none;
  line-height: 80rpx;
  color: #333;
}

.search-input::placeholder {
  color: #999;
  font-size: 28rpx;
}

.search-icon {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #999999;
  z-index: 1;
}

.clear-btn {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  background: #E0E0E0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
  transition: background-color 0.3s ease;
}

.clear-btn:active {
  background: #D0D0D0;
}

.clear-icon {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
  line-height: 1;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4A90E2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 500rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 36rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 40rpx;
}

.goto-home-btn {
  background: #4A90E2;
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  text-decoration: none;
}

/* 无搜索结果 */
.no-results {
  text-align: center;
  padding: 100rpx 0;
}

.no-results-text {
  font-size: 28rpx;
  color: #999999;
}

/* 收藏列表 */
.collection-list {
  margin-bottom: 30rpx;
}

.collection-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
  transition: all 0.2s ease;
}

.item-content {
  flex: 1;
  min-width: 0;
  cursor: pointer;
}

.item-content:active {
  opacity: 0.8;
}

.item-actions {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.item-arrow {
  margin-left: 20rpx;
  color: #CCCCCC;
  cursor: pointer;
  padding: 10rpx;
}

.item-arrow:active {
  opacity: 0.6;
}

.sentence-preview {
  margin-bottom: 15rpx;
}

.english-preview {
  display: block;
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  line-height: 1.4;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.chinese-preview {
  display: block;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-meta {
  display: flex;
  align-items: center;
}

.collect-date {
  font-size: 24rpx;
  color: #999999;
}

.delete-btn {
  padding: 20rpx;
  margin-left: 20rpx;
  border-radius: 50%;
  background-color: #f8f8f8;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 60rpx;
  min-height: 60rpx;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.delete-btn:hover {
  background-color: #ffe6e6;
  border-color: #ffcccc;
}

.delete-btn:active {
  background-color: #ffdddd;
  transform: scale(0.9);
  border-color: #E74C3C;
}

.delete-icon {
  font-size: 32rpx;
  color: #E74C3C;
  line-height: 1;
  pointer-events: none;
}

.arrow-icon {
  font-size: 40rpx;
  font-weight: bold;
}

/* 统计信息 */
.stats-footer {
  text-align: center;
  padding: 30rpx;
  border-top: 2rpx solid #F0F0F0;
  margin-top: 20rpx;
}

.stats-text {
  font-size: 26rpx;
  color: #999999;
}

/* 登录提示 */
.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.login-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.login-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
}

.login-desc {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 60rpx;
  line-height: 1.5;
}

.login-btn {
  background: #4A90E2;
  color: white;
  padding: 24rpx 60rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
}

.login-btn:active {
  background: #357ABD;
  transform: translateY(2rpx);
}
/* 刷新提示 */
.refresh-hint {
  display: block;
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 10rpx;
  opacity: 0.8;
}