/* pages/detail/detail.wxss */

/* 自定义导航栏 */
.custom-navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 30rpx;
  background: white;
  border-bottom: 2rpx solid #F0F0F0;
  margin-bottom: 20rpx;
}

.navbar-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.back-icon {
  font-size: 48rpx;
  color: #4A90E2;
  font-weight: bold;
  margin-right: 8rpx;
}

.back-text {
  font-size: 28rpx;
  color: #4A90E2;
}

.navbar-center {
  flex: 2;
  text-align: center;
}

.navbar-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.navbar-right {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.collect-nav-btn {
  background: transparent;
  border: none;
  padding: 10rpx;
  font-size: 32rpx;
}

.collect-nav-btn.collected .collect-icon {
  animation: heartbeat 0.6s ease-in-out;
}

@keyframes heartbeat {
  0% { transform: scale(1); }
  50% { transform: scale(1.2); }
  100% { transform: scale(1); }
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4A90E2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666666;
}

/* 详情内容 */
.detail-content {
  padding-bottom: 40rpx;
}

/* 句子详情卡片 */
.sentence-detail-card {
  padding: 40rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.sentence-content {
  margin-bottom: 40rpx;
}

.english-text {
  display: block;
  font-size: 40rpx;
  line-height: 1.5;
  color: #333333;
  font-weight: 600;
  margin-bottom: 25rpx;
  letter-spacing: 2rpx;
}

.chinese-text {
  display: block;
  font-size: 32rpx;
  line-height: 1.4;
  color: #666666;
  font-weight: 400;
}

.play-section {
  border-top: 2rpx solid #F0F0F0;
  padding-top: 30rpx;
}

.play-detail-btn {
  background: linear-gradient(135deg, #4A90E2, #357ABD);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx 50rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(74, 144, 226, 0.3);
  transition: all 0.3s ease;
}

.play-detail-btn.playing {
  background: linear-gradient(135deg, #357ABD, #2E6BA8);
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
    box-shadow: 0 8rpx 20rpx rgba(74, 144, 226, 0.3);
  }
  70% {
    transform: scale(1.02);
    box-shadow: 0 8rpx 25rpx rgba(74, 144, 226, 0.5);
  }
  100% {
    transform: scale(1);
    box-shadow: 0 8rpx 20rpx rgba(74, 144, 226, 0.3);
  }
}

.play-detail-btn:active {
  transform: scale(0.95);
}

.play-icon {
  margin-right: 15rpx;
  font-size: 36rpx;
}

.play-text {
  font-size: 32rpx;
}

/* 重点词汇详情 */
.keywords-detail-section {
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.keywords-count {
  font-size: 26rpx;
  color: #4A90E2;
  background: #E8F4FD;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.keywords-detail-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.keyword-detail-item {
  padding: 25rpx;
  background: linear-gradient(135deg, #F8F9FA, #FFFFFF);
  border-radius: 16rpx;
  border-left: 8rpx solid #4A90E2;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.keyword-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.word-info {
  flex: 1;
}

.word-main {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #4A90E2;
  margin-bottom: 8rpx;
}

.word-phonetic {
  font-size: 28rpx;
  color: #F5A623;
  font-family: 'Courier New', monospace;
  font-weight: 500;
}

.word-pos {
  margin-left: 20rpx;
}

.pos-tag {
  font-size: 24rpx;
  color: #666666;
  background: #E8E8E8;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.word-meaning {
  padding-top: 15rpx;
  border-top: 1rpx solid #F0F0F0;
}

.meaning-text {
  font-size: 30rpx;
  color: #333333;
  line-height: 1.5;
  font-weight: 400;
}

/* 句子信息 */
.sentence-info {
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.info-header {
  margin-bottom: 25rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.info-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
  font-weight: 500;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 400;
}

/* 操作提示 */
.action-tips {
  text-align: center;
  padding: 30rpx;
  margin-top: 20rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #999999;
  font-style: italic;
  line-height: 1.5;
}